<div class="row">
  <div class="small-3 columns"></div>
  <div class="small-6 small-centered columns">
    <h3>New Prompt</h3>
  </div>
  <div class="small-3 columns"></div>
</div>

<div class="row">
  <div class="small-3 columns"></div>
  <div class="small-6 small-centered columns">
    <%= simple_form_for @prompt do |f| %>
    <%= f.input :text, label: false, placeholder: 'Enter text for your prompt (300 character limit)', input_html: { maxlength: 300, style:'width: 500px; height:75px;'} %>
    <%= f.button :submit, 'Add Prompt' %>
    <% end %>
  </div>
  <div class="small-3 columns"></div>
</div>
